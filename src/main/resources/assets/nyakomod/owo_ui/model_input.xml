<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Model name:</text>
                        </label>
                        <text-box id="name-box">
                            <sizing>
                                <horizontal method="fixed">250</horizontal>
                            </sizing>
                        </text-box>


                        <flow-layout direction="horizontal">
                            <children>
                                <checkbox id="item-checkbox">
                                    <text>Item</text>
                                    <checked>true</checked>
                                    <margins>
                                        <horizontal>5</horizontal>
                                    </margins>
                                </checkbox>
                                <checkbox id="handheld-checkbox">
                                    <text>Handheld</text>
                                    <margins>
                                        <horizontal>5</horizontal>
                                    </margins>
                                </checkbox>
                                <checkbox id="block-checkbox">
                                    <text>Block</text>
                                    <margins>
                                        <horizontal>5</horizontal>
                                    </margins>
                                </checkbox>
                            </children>

                            <margins>
                                <vertical>10</vertical>
                            </margins>
                        </flow-layout>


                        <label>
                            <text>Enter URL to a PNG:</text>
                        </label>
                        <text-box id="url-box">
                            <sizing>
                                <horizontal method="fixed">250</horizontal>
                            </sizing>
                        </text-box>
                        <button id="submit">
                            <text>Save URL</text>
                            <margins>
                                <top>10</top>
                            </margins>
                            <sizing>
                                <horizontal method="content">100</horizontal>
                            </sizing>
                        </button>
                    </children>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="true"></panel>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent></vanilla-translucent>
            </surface>
        </flow-layout>
    </components>
</owo-ui>