<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Enter URL to a PNG:</text>
                        </label>
                        <text-box id="url-box">
                            <sizing>
                                <horizontal method="fixed">250</horizontal>
                            </sizing>
                        </text-box>

                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text>Width:</text>
                                    <margins>
                                        <right>10</right>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fixed">32</horizontal>
                                    </sizing>
                                </label>
                                <discrete-slider id="width" max="16" min="1">
                                    <sizing>
                                        <horizontal method="fixed">208</horizontal>
                                    </sizing>
                                </discrete-slider>
                            </children>
                            <margins><top>10</top></margins>
                        </flow-layout>
                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text>Height:</text>
                                    <margins>
                                        <right>10</right>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fixed">32</horizontal>
                                    </sizing>
                                </label>
                                <discrete-slider id="height" max="16" min="1">
                                    <value>1</value>
                                    <sizing>
                                        <horizontal method="fixed">208</horizontal>
                                    </sizing>
                                </discrete-slider>
                            </children>
                            <margins><top>10</top></margins>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text>Move:</text>
                                    <margins>
                                        <right>10</right>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fixed">32</horizontal>
                                    </sizing>
                                </label>
                                <button id="left">
                                    <text>Left</text>
                                </button>
                                <button id="right">
                                    <text>Right</text>
                                    <sizing>
                                        <horizontal method="content">2</horizontal>
                                    </sizing>
                                </button>
                                <button id="up">
                                    <text>Up</text>
                                    <sizing>
                                        <horizontal method="content">2</horizontal>
                                    </sizing>
                                </button>
                                <button id="down">
                                    <text>Down</text>
                                    <sizing>
                                        <horizontal method="content">2</horizontal>
                                    </sizing>
                                </button>
                            </children>
                            <margins>
                                <top>10</top>
                            </margins>
                            <horizontal-alignment>center</horizontal-alignment>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text>Fit:</text>
                                    <margins>
                                        <right>10</right>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fixed">32</horizontal>
                                    </sizing>
                                </label>
                                <checkbox id="fill-mode">
                                    <checked>false</checked>
                                    <text>Fill</text>
                                </checkbox>
                            </children>
                            <margins>
                                <top>10</top>
                            </margins>
                            <horizontal-alignment>center</horizontal-alignment>
                        </flow-layout>

                        <button id="submit">
                            <text>Save URL</text>
                            <margins>
                                <top>10</top>
                            </margins>
                            <sizing>
                                <horizontal method="content">100</horizontal>
                            </sizing>
                        </button>
                    </children>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>