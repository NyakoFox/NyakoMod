<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Enter URL to a PNG:</text>
                        </label>
                        <text-box id="url-box">
                            <sizing>
                                <horizontal method="fixed">250</horizontal>
                            </sizing>
                        </text-box>

                        <label>
                            <text>Pet Size (how tall it is in blocks):</text>
                            <margins>
                                <top>10</top>
                            </margins>
                        </label>
                        <text-box id="pet-size-box">
                            <text>2.0</text>
                            <sizing>
                                <horizontal method="fixed">250</horizontal>
                            </sizing>
                        </text-box>

                        <label>
                            <text>Should it be still?</text>
                            <margins>
                                <top>10</top>
                            </margins>
                        </label>
                        <checkbox id="still-box">
                            <text>Yes</text>
                        </checkbox>

                        <button id="submit">
                            <text>Save URL</text>
                            <margins>
                                <top>10</top>
                            </margins>
                            <sizing>
                                <horizontal method="content">100</horizontal>
                            </sizing>
                        </button>
                    </children>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="true"></panel>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent></vanilla-translucent>
            </surface>
        </flow-layout>
    </components>
</owo-ui>